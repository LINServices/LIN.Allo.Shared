
<div class="flex w-full items-center rounded-lg bg-white hover:shadow-gray-400 hover:ring-current-500 hover:ring-1 dark:bg-zinc-900">

    @* Información *@
    <div class="flex w-full items-center p-3">

        @* Imagen de perfil *@
        @if (LIN.Access.Communication.Session.Instance.Account.Profile.Length <= 0)
        {
            <div class="relative mr-2 inline-block">
                <div class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-zinc-100 bg-zinc-100 p-2 font-bold leading-none text-zinc-600 dark:border-zinc-400 dark:bg-zinc-800 dark:text-zinc-200">
                    <label class="mt-0.5 h-max w-max content-center text-center lg:mt-0">@(Global.Utilities.Strings.GetInitials(UserInformation?.Profile?.Alias))</label>
                </div>
                <span class="ring-2 text-[8px] absolute bottom-0 end-0 block h-2.5 w-2.5 transform rounded-full bg-green-500 ring-white">
                </span>
            </div>
        }
        else
        {
            <img class="ring-2 mr-2 h-9 w-9 rounded-full p-1 ring-gray-300 dark:ring-gray-400" src="data:image/png;base64,@Img64" alt="Bordered avatar">
        }




        @* Usuario y nombre *@
        <div class="flex flex-col">
            <label class="text-sm font-bold dark:text-white">@UserInformation.Profile.Alias</label>
            <label class="-mt-1 text-xs dark:text-gray-300">@@@UserInformation.Account.Identity.Unique</label>
        </div>

    </div>


    @* Sección derecha *@
    <div class="mr-4">

        @* Cargando *@
        @if (Section == Sections.Loading)
        {
            <div class="flex items-center justify-center">
                <div class="border-[3px] inline-block h-4 w-4 animate-spin rounded-full border-current border-t-transparent text-current-600" role="status" aria-label="loading">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        }

        @* Hubo un error *@
        else if (Section == Sections.Error)
        {
            <div class="flex flex-col items-center justify-center">

                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" class="bi bi-exclamation-triangle-fill fill-orange-400" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>

            </div>
        }

        @* Botón de agregar *@
        else
        {
            <button @onclick="Find" type="button" class="flex inline-flex h-8 w-8 items-center items-center justify-center rounded-full bg-current-700 p-2.5 text-center text-sm font-medium text-white hover:bg-current-800 focus:ring-4 focus:outline-none focus:ring-current-300 dark:focus:ring-current-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-4 w-4" viewBox="0 0 16 16">
                    <path d="M2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                </svg>
            </button>
        }

    </div>

</div>